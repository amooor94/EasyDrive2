<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColorHint="#00ccff"
        android:textColor="#00ccff"
        android:textSize="25sp"
        android:ems="10"
        android:id="@+id/usernameLoginText"
        android:layout_centerVertical="true"

        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="#00ccff"
        android:hint="Password"
        android:textSize="25sp"
        android:textColor="#00ccff"
        android:id="@+id/passwordLoginText"
        android:layout_below="@+id/usernameLoginText"
        android:layout_alignLeft="@+id/usernameLoginText"
        android:layout_alignStart="@+id/usernameLoginText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/LoginBtn"
        android:layout_below="@+id/passwordLoginText"
        android:layout_marginTop="37dp"
        android:textColor="#00ccff"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/passwordLoginText"
        android:layout_alignStart="@+id/passwordLoginText"
        android:layout_alignRight="@+id/passwordLoginText"
        android:layout_alignEnd="@+id/passwordLoginText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showname"
        android:id="@+id/textView"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#00ccff"
        />


</RelativeLayout>
